@model QuanLiBanSach02.Category

@{
    ViewBag.Title = "Thêm thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="grid__auto">
        <h1 class="text-center">Thêm thể loại</h1>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (TempData["ErrorAddCateMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorAddCateMessage"]</div>
        }

        <div class="form-floating">
            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>

        <div class="">
            <input type="submit" value="Create" class="btn btn-primary my-btn" />
        </div>
        <br />
    </div>
}


